<% if @current_user %>
  <nav class="bg-gray-800 text-white p-4 flex justify-between items-center">
    <%= link_to "Home", root_path, class: "px-4 py-2 mr-4" %>
    <%= link_to "Profile", user_path(current_user), class: "px-4 py-2" %>
    <div class="flex items-center">
      <%= link_to "Log out", new_session_path, method: :delete, class: "px-4 py-2 text-blue-500 hover:text-white" %>
      <%= link_to "Sign in", new_session_path, method: :get, class: "px-4 py-2 text-gray-200 hover:text-white" %>
    </div>
  </nav>
<% else %>
  <nav class="bg-gray-800 text-white p-4 flex justify-between items-center">
    <%= link_to "Home", root_path, class: "px-4 py-2 mr-4" %>
    <%= link_to "Sign in", new_session_path, method: :get, class: "px-4 py-2" %>
    <div class="flex items-center">
      <%= link_to "Register", new_session_path, class: "px-4 py-2 text-blue-500 hover:text-white" %>
    </div>
  </nav>
<% end %>

