<div class="min-h-screen flex items-center justify-center bg-base-200">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold text-center mb-6">Reset Your Password</h2>

      <% if flash[:alert] %>
        <div class="alert alert-error mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= flash[:alert] %></span>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-success mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= flash[:notice] %></span>
        </div>
      <% end %>

      <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-4" do |form| %>
        <div class="form-control">
          <label class="label mb-1">
            <span class="label-text">New Password</span>
          </label>
          <%= form.password_field :password, 
                                  required: true, 
                                  autocomplete: "new-password", 
                                  placeholder: "Enter new password", 
                                  maxlength: 72, 
                                  class: "!outline-none input input-bordered w-full" %>
        </div>

        <div class="form-control">
          <label class="label mb-1">
            <span class="label-text">Confirm New Password</span>
          </label>
          <%= form.password_field :password_confirmation, 
                                  required: true, 
                                  autocomplete: "new-password", 
                                  placeholder: "Repeat new password", 
                                  maxlength: 72, 
                                  class: "!outline-none input input-bordered w-full" %>
        </div>

        <div class="form-control mt-6">
          <%= form.submit "Save Password", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
